rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // A user can read their own user-to-tenant mapping document.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }
    
    // A user can access any document inside their own tenant, but not other tenants.
    // This is checked by getting the user's tenantId from the /users/{userId} document
    // and comparing it to the tenantId in the path.
    match /tenants/{tenantId}/{document=**} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;
    }

    // Publicly readable collections, if any, would go here.
    // Example:
    // match /global/plans/{planId} {
    //   allow read: if true;
    // }
  }
}
