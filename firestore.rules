/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a multi-tenant security model where users are associated with specific tenants.
 * Only authenticated users can access data, and access is generally restricted to resources within their tenant.
 *
 * @dataStructure
 * - /users/{userId}: Maps user UIDs to tenant IDs.
 * - /tenants/{tenantId}: Stores tenant information.
 * - /tenants/{tenantId}/*: Subcollections contain data specific to a tenant.
 * - /global/plans/{planId}: Stores globally available subscription plans.
 * - /mail/{mailId}: Collection for triggering emails, writable by the backend only
 *
 * @keySecurityDecisions
 * - Users can only read or write data within their assigned tenant.
 * - Listing of users within a tenant is allowed only to authenticated users of that tenant.
 * - The /mail collection is only writable by the backend to trigger emails.
 * - Public read access is not granted to any collection.
 *
 * @denormalizationForAuthorization
 * - UserTenant documents map UIDs to tenant IDs, enabling tenant-based access control.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    function getTenantId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId;
    }

    function isInTenant(tenantId) {
      return getTenantId() == tenantId;
    }

    /**
     * @description Maps user UIDs to tenant IDs.
     * @path /users/{userId}
     * @allow (create) User with matching UID can create this document.
     * @deny (create) User trying to create a document with a different UID.
     * @allow (get, list) Not allowed.
     * @deny (get, list) Any read operations are denied.
     * @allow (update, delete) Not allowed.
     * @deny (update, delete) Any write operations are denied.
     * @principle Enforces user-ownership for the /users/{userId} document, linking the user's UID to their tenantId.
     */
    match /users/{userId} {
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.tenantId is string;
      allow get, list, update, delete: if false;
    }

    /**
     * @description Stores tenant information.
     * @path /tenants/{tenantId}
     * @allow (create) Not allowed.
     * @deny (create) No one can create a tenant document via client.
     * @allow (get) Authenticated user in the tenant.
     * @allow (list) Not allowed.
     * @deny (list) Listing tenants is not permitted.
     * @allow (update, delete) Not allowed.
     * @deny (update, delete) Updates or deletes are not permitted via client.
     * @principle Restricts tenant creation, updates, and deletes.
     */
    match /tenants/{tenantId} {
      allow get: if isSignedIn() && isInTenant(tenantId);
      allow create, list, update, delete: if false;
    }

    /**
     * @description Sub-collection for product categories within a tenant.
     * @path /tenants/{tenantId}/categories/{categoryId}
     * @allow (create) Authenticated user within the tenant.
     * @deny (create) User from a different tenant.
     * @allow (get, list) Authenticated user within the tenant.
     * @deny (get, list) User from a different tenant.
     * @allow (update, delete) Authenticated user within the tenant.
     * @deny (update, delete) User from a different tenant.
     * @principle Enforces tenant-based access control for product categories.
     */
    match /tenants/{tenantId}/categories/{categoryId} {
      allow get, list: if isSignedIn() && isInTenant(tenantId);
      allow create, update, delete: if isSignedIn() && isInTenant(tenantId);
    }

    /**
     * @description Sub-collection for products within a tenant.
     * @path /tenants/{tenantId}/products/{productId}
     * @allow (create) Authenticated user within the tenant.
     * @deny (create) User from a different tenant.
     * @allow (get, list) Authenticated user within the tenant.
     * @deny (get, list) User from a different tenant.
     * @allow (update, delete) Authenticated user within the tenant.
     * @deny (update, delete) User from a different tenant.
     * @principle Enforces tenant-based access control for products.
     */
    match /tenants/{tenantId}/products/{productId} {
      allow get, list: if isSignedIn() && isInTenant(tenantId);
      allow create, update, delete: if isSignedIn() && isInTenant(tenantId);
    }

     /**
