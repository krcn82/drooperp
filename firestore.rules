rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rule 1: Allow a user to read their own document in the 'users' collection.
    // This is a secure lookup to get the user's tenantId.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Rule 2: Grant access to all documents and subcollections within a tenant
    // only if the user's authenticated tenantId matches the tenantId in the path.
    match /tenants/{tenantId}/{document=**} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;
    }
    
    // Global collections that can be read by any authenticated user
    match /global/{collectionId}/{document=**} {
      allow read: if request.auth != null;
    }
    
    // Mail collection for the "Trigger Email" extension
    match /mail/{documentId} {
      allow create: if request.auth != null;
    }
  }
}
