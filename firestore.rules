rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is a member of the tenant
    function isTenantMember(tenantId) {
      // The user must have a document in the global /users collection
      // where the tenantId field matches the tenantId from the path.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;
    }

    // Allow a user to read their own tenant mapping document.
    // This is the first step in the security process.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Protect all documents and subcollections within a tenant.
    // The recursive wildcard {document=**} is crucial here.
    match /tenants/{tenantId}/{document=**} {
      allow read, write: if request.auth != null && isTenantMember(tenantId);
    }
    
    // Publicly readable collections (e.g., subscription plans)
    match /global/{collection}/{docId} {
        allow read: if true;
        allow write: if false; // Nobody can write to global collections from the client
    }
    
    // Mail trigger collection for the "Trigger Email" extension.
    // Only allow authenticated users to create documents (send emails).
    match /mail/{mailId} {
        allow create: if request.auth != null;
        allow read, update, delete: if false; // Only the extension should interact with documents
    }
  }
}
