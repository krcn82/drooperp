    match /tenants/{tenantId}/payments/{paymentId} {
      allow get: if isTenantMember(tenantId);
      allow list: if false;
      allow create: if isTenantMember(tenantId);
      allow update: if isTenantMember(tenantId);
      allow delete: if isTenantMember(tenantId);
    }

    /**
     * @description Document for general settings within a tenant.
     * @path /tenants/{tenantId}/settings/general
     * @allow (get) Tenant members can read general settings.
     * @deny (create) Non-tenant members cannot create general settings.
     * @principle Restricts access to tenant-owned data to tenant members.
     */
    match /tenants/{tenantId}/settings/general {
      allow get: if isTenantMember(tenantId);
      allow list: if false;
      allow create: if isTenantMember(tenantId);
      allow update: if isTenantMember(tenantId);
      allow delete: if isTenantMember(tenantId);
    }

    /**
     * @description Document for module settings within a tenant.
     * @path /tenants/{tenantId}/settings/modules
     * @allow (get) Tenant members can read module settings.
     * @deny (create) Non-tenant members cannot create module settings.
     * @principle Restricts access to tenant-owned data to tenant members.
     */
    match /tenants/{tenantId}/settings/modules {
      allow get: if isTenantMember(tenantId);
      allow list: if false;
      allow create: if isTenantMember(tenantId);
      allow update: if isTenantMember(tenantId);
      allow delete: if isTenantMember(tenantId);
    }

       /**
     * @description Document for automation rule settings within a tenant.
     * @path /tenants/{tenantId}/settings/automationRules
     * @allow (get) Tenant members can read the automation rule settings.
     * @deny (create) Non-tenant members cannot create or overwrite this document.
     * @principle Restricts access to tenant-owned settings to tenant members.
     */
    match /tenants/{tenantId}/settings/automationRules {
      allow get: if isTenantMember(tenantId);
      allow list: if false;
      allow create: if isTenantMember(tenantId);
      allow update: if isTenantMember(tenantId);
      allow delete: if isTenantMember(tenantId);
    }

    /**
     * @description Singleton document for RKSV fiscal certificate and configuration for a tenant.
     * @path /tenants/{tenantId}/rksvConfig
     * @allow (get) Tenant members can read RKSV config.
     * @deny (create) Non-tenant members cannot create or overwrite this document.
     * @principle Restricts access to tenant-owned data to tenant members.
     */
    match /tenants/{tenantId}/rksvConfig {
      allow get: if isTenantMember(tenantId);
      allow list: if false;
      allow create: if isTenantMember(tenantId);
      allow update: if isTenantMember(tenantId);
      allow delete: if isTenantMember(tenantId);
    }

    /**
     * @description Sub-collection for the RKSV cryptographic signature chain.
     * @path /tenants/{tenantId}/signatures/{signatureId}
     * @allow (get) Tenant members can read signatures.
     * @deny (create) Non-tenant members cannot create signatures.
     * @principle Restricts access to tenant-owned data to tenant members.
     */
    match /tenants/{tenantId}/signatures/{signatureId} {
      allow get: if isTenantMember(tenantId);
      allow list: if false;
      allow create: if isTenantMember(tenantId);
      allow update: if isTenantMember(tenantId);
      allow delete: if isTenantMember(tenantId);
    }

    /**
     * @description Sub-collection for daily Z-Reports (Tagesabschluss).
     * @path /tenants/{tenantId}/zReports/{reportId}
     * @allow (get) Tenant members can read zReports.
     * @deny (create) Non-tenant members cannot create zReports.
     * @principle Restricts access to tenant-owned data to tenant members.
