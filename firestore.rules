/**
 * @fileOverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces a multi-tenant security model where users are associated with tenants,
 * and data access is generally restricted to users within their respective tenants.
 * Access to AI Chat messages is restricted to the authenticated user.
 *
 * Data Structure:
 * - /users/{userId}: Maps user UIDs to tenant IDs.  This is a top-level collection used *only* for security rule lookups.
 * - /tenants/{tenantId}: Stores tenant information.
 * - /tenants/{tenantId}/users/{userId}: Stores user data within a tenant.
 * - /tenants/{tenantId}/transactions/{transactionId}: Stores transaction data within a tenant.
 * - /tenants/{tenantId}/products/{productId}: Stores product data within a tenant.
 * - /tenants/{tenantId}/settings/{settingId}: Stores tenant-specific settings.
 * - /global/plans/{planId}: Stores global subscription plans. This collection is publicly readable.
 * - /tenants/{tenantId}/aiChats/{chatId}/messages/{messageId}: Stores messages within an AI chat session.
 *
 * Key Security Decisions:
 * - Users can only read and write their own user document in `/users/{userId}`.
 * - Most tenant-related data is restricted to authenticated users.
 * - Global plans are publicly readable.
 * - AI Chat messages are restricted to the authenticated user.
 *
 * Denormalization for Authorization:
 * - The `/users/{userId}` document is used to quickly determine the tenant ID for a user. This avoids having to query the `/tenants/{tenantId}/users/{userId}` collection for every request.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows a user to read and write their own UserTenant document to map their UID to their tenantId.
     * @path /users/{userId}
     * @allow (create) - User with UID 'user123' creates a document with 'tenantId: 'tenant456'' where request.auth.uid == 'user123'.
     * @allow (get, update, delete) - User with UID 'user123' reads/updates/deletes their own UserTenant document.
     * @deny (create) - User with UID 'user123' tries to create a UserTenant document for 'user456'.
     * @deny (list) - Listing all UserTenant documents is not allowed.
     * @principle Enforces user-ownership and prevents unauthorized access to user-tenant mappings.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      allow get, update, delete: if isOwner(userId) && resource != null;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow list: if false;
    }

    /**
     * @description Allows access to tenant documents.
     * @path /tenants/{tenantId}
     * @allow (get, list) - Any authenticated user can get or list tenants.
     * @deny (create, update, delete) - Only authenticated users can create, update, or delete tenants.
     * @principle Requires user to be authenticated.
     */
    match /tenants/{tenantId} {
      function isSignedIn() {
        return request.auth != null;
      }
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;
    }

    /**
     * @description Allows users within a tenant to manage their own user documents.
     * @path /tenants/{tenantId}/users/{userId}
     * @allow (get, list, create, update, delete) - Only the user with matching UID can perform operations on their document.
     * @deny (create) - User with UID 'user123' tries to create a document with a different userId.
     * @principle Enforces user-ownership within a tenant.
     */
    match /tenants/{tenantId}/users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      allow get, update, delete: if isOwner(userId) && resource != null;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow list: if false;
    }

    /**
     * @description Allows authenticated users to manage transactions within their tenant.
     * @path /tenants/{tenantId}/transactions/{transactionId}
     * @allow (get, list) - Any authenticated user can read any transaction.
     * @deny (create, update, delete) - No one can create, update, or delete transactions.
     * @principle Restricts transaction management to authorized users.
     */
    match /tenants/{tenantId}/transactions/{transactionId} {
      function isSignedIn() {
        return request.auth != null;
      }
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;
    }

    /**
     * @description Allows authenticated users to manage products within their tenant.
     * @path /tenants/{tenantId}/products/{productId}
     * @allow (get, list) - Any authenticated user can read any product.
     * @deny (create, update, delete) - No one can create, update, or delete products.
     * @principle Restricts product management to authorized users.
     */
    match /tenants/{tenantId}/products/{productId} {
      function isSignedIn() {
        return request.auth != null;
      }
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;
    }

    /**
     * @description Allows authenticated users to manage settings within their tenant.
     * @path /tenants/{tenantId}/settings/{settingId}
     * @allow (get, list) - Any authenticated user can read any setting.
     * @deny (create, update, delete) - No one can create, update, or delete settings.
     * @principle Restricts setting management to authorized users.
     */
    match /tenants/{tenantId}/settings/{settingId} {
      function isSignedIn() {
        return request.auth != null;
      }
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to subscription plans.
     * @path /global/plans/{planId}
     * @allow (get, list) - Anyone can read subscription plans.
     * @deny (create, update, delete) - No one can create, update, or delete plans.
     * @principle Allows public access to subscription plan information.
     */
    match /global/plans/{planId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows users to read messages in their own AI chat sessions.
     * @path /tenants/{tenantId}/aiChats/{chatId}/messages/{messageId}
     * @allow (get, list) - User can read messages if the chatId contains the user's id.
     * @deny (create, update, delete) - No one can create, update, or delete messages.
     * @principle Allows user to read messages in their own AI chat sessions.
     */
    match /tenants/{tenantId}/aiChats/{chatId}/messages/{messageId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isChatParticipant(chatId) {
        return chatId.matches(".*_" + request.auth.uid + ".*");
      }
      allow get, list: if isSignedIn() && isChatParticipant(chatId);
      allow create, update, delete: if false;
    }
  }
}