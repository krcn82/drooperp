/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a multi-tenant data model with user-based access control.
 *
 * Data Structure:
 * - /users/{userId}: Maps user UIDs to tenant IDs. This is used for authorization.
 * - /tenants/{tenantId}: Stores tenant information.
 * - /tenants/{tenantId}/users/{userId}: Stores user profiles within a tenant.
 * - /tenants/{tenantId}/transactions/{transactionId}: Stores transaction data for each tenant.
 * - /tenants/{tenantId}/products/{productId}: Stores product data for each tenant.
 * - /tenants/{tenantId}/settings/{settingId}: Stores settings for each tenant.
 * - /global/plans/{planId}: Stores globally available subscription plans.
 *
 * Key Security Decisions:
 * - Users can only create their own root `/users/{userId}` document.
 * - Within tenants, users have full access to their own user document (`/tenants/{tenantId}/users/{userId}`).
 * - Transactions and Products are scoped to the tenant and have owner-only write access.
 * - Subscription Plans are globally readable.
 * - Listing of users or other resources is generally allowed within a tenant context, but denied at the top level.
 *
 * Denormalization for Authorization:
 * - The `/users/{userId}` document contains the `tenantId`. This allows rules to quickly determine the tenant a user belongs to without additional reads.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Maps user UIDs to tenant IDs. This document is created when a user signs up and is essential for authorization in other collections.
     * @path /users/{userId}
     * @allow (create) User with UID 'user123' can create this document with tenantId.
     * @deny (create) User with UID 'user456' cannot create this document for 'user123'.
     * @principle Enforces self-creation; only the user with the matching UID can create this document.
     */
    match /users/{userId} {
      allow get: if false;
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Stores tenant information. Only authenticated users can read tenant information.
     * @path /tenants/{tenantId}
     * @allow (get) Any authenticated user can get tenant info.
     * @deny (create) Only authenticated users can create tenants (for now).
     * @principle Basic read access for authenticated users.
     */
    match /tenants/{tenantId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if false; // TODO: Implement Tenant creation process with admin roles.
      allow update: if false; // TODO: Implement Tenant update process with admin roles.
      allow delete: if false; // TODO: Implement Tenant deletion process with admin roles.

      /**
       * @description Stores user profiles within a tenant. Each user can read and write their own profile.
       * @path /tenants/{tenantId}/users/{userId}
       * @allow (get) User 'user123' can get their profile.
       * @allow (create) User 'user123' can create their profile.
       * @deny (update) User 'user456' cannot update profile for 'user123'.
       * @principle User-level access control within a tenant.
       */
      match /users/{userId} {
        allow get: if isSignedIn() && isTenantUser(tenantId, userId);
        allow list: if false;
        allow create: if isSignedIn() && request.auth.uid == userId; // User can create their own profile
        allow update: if isSignedIn() && request.auth.uid == userId;
        allow delete: if isSignedIn() && request.auth.uid == userId;
      }

      /**
       * @description Stores transaction data for each tenant.
       * @path /tenants/{tenantId}/transactions/{transactionId}
       * @allow (create) Authenticated user can create transaction (pending owner validation).
       * @deny (update) Non-owner cannot update transaction.
       * @principle Owner-only write access within a tenant.
       */
      match /transactions/{transactionId} {
        allow get: if isSignedIn() && isTenantUser(tenantId, request.auth.uid);
        allow list: if isSignedIn() && isTenantUser(tenantId, request.auth.uid);
        allow create: if isSignedIn() && isTenantUser(tenantId, request.auth.uid); //TODO: Add owner validation once the schema is updated with an ownership field.
        allow update: if false;  // TODO: Add owner validation once the schema is updated with an ownership field.
        allow delete: if false;  // TODO: Add owner validation once the schema is updated with an ownership field.
      }

      /**
       * @description Stores product data for each tenant.
       * @path /tenants/{tenantId}/products/{productId}
       * @allow (create) Authenticated user can create product (pending owner validation).
       * @deny (update) Non-owner cannot update product.
       * @principle Owner-only write access within a tenant.
       */
      match /products/{productId} {
        allow get: if isSignedIn() && isTenantUser(tenantId, request.auth.uid);
        allow list: if isSignedIn() && isTenantUser(tenantId, request.auth.uid);
        allow create: if isSignedIn() && isTenantUser(tenantId, request.auth.uid); //TODO: Add owner validation once the schema is updated with an ownership field.
        allow update: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
        allow delete: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
      }

       /**
       * @description Stores settings for each tenant.
       * @path /tenants/{tenantId}/settings/{settingId}
       */
      match /settings/{settingId} {
        allow get: if isSignedIn() && isTenantUser(tenantId, request.auth.uid);
        allow list: if false;
        allow create: if isSignedIn() && isTenantUser(tenantId, request.auth.uid); // TODO: Add owner validation once the schema is updated with an ownership field.
        allow update: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
        allow delete: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
      }
    }

    match /tenants/{tenantId}/{document=**} {
        allow read, write: if false;
    }

    /**
     * @description Stores globally available subscription plans. Anyone can read plan data.
     * @path /global/plans/{planId}
     * @allow (get) Anyone can read plan data.
     * @deny (create) No one can create plans (for now).
     * @principle Public read access.
     */
    match /global/plans/{planId} {
      allow get: if true;
      allow list: if true;
      allow create: if false; // TODO: Implement Plan creation process with admin roles.
      allow update: if false; // TODO: Implement Plan update process with admin roles.
      allow delete: if false; // TODO: Implement Plan deletion process with admin roles.
    }
  }

  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(userId) {
    return request.auth.uid == userId;
  }

  function isTenantUser(tenantId, userId) {
        return exists(/databases/$(database)/documents/users/$(userId))
            && get(/databases/$(database)/documents/users/$(userId)).data.tenantId == tenantId;
  }
}