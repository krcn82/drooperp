rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rule 1: Global User Document
    // - A user can read their own document in the top-level 'users' collection to find their tenantId.
    // - No one else can read this document.
    // - Only the system (backend functions) should create/update this. Client-side updates are disallowed.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Disallow client-side writes
    }

    // Rule 2: Tenant Data Access
    // - A user can access documents within a tenant if their UID is present in that tenant's 'users' subcollection.
    match /tenants/{tenantId} {
      // Allow a user to list the tenants they own.
      allow list: if request.auth != null && request.query.where.path == "ownerUid" && request.query.where.op == "==" && request.query.where.value == request.auth.uid;
      
      // Allow read/write access to a specific tenant document and its subcollections
      // if the user is a member of that tenant.
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;
    }
    
    // Catch-all for any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
