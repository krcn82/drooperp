/**
 * @file Firebase Security Rules for Firestore.
 *
 * @core_philosophy This ruleset enforces a multi-tenant security model, where each tenant's data is isolated.
 *   Most data is stored under a /tenants/{tenantId} collection. Users are associated with tenants via the
 *   /users/{userId} collection, which maps a user's UID to their tenant ID.  Authorization checks generally
 *   verify that the authenticated user's tenant ID matches the tenant ID in the requested resource path.
 *   Read access is generally restricted to authenticated users. Write access is often restricted to users
 *   who are owners or admins of the tenant.  The ruleset errs on the side of caution, explicitly denying
 *   access when the intent is unclear.
 *
 * @data_structure
 *   - /users/{userId}: Maps a user ID to a tenant ID.  Used for authorization.
 *   - /tenants/{tenantId}: Stores tenant-specific data.
 *   - /tenants/{tenantId}/*:  Subcollections of tenants contain the bulk of the application data (products, orders, etc.)
 *   - /global/plans/{planId}: Stores global subscription plans.
 *   - /mail/{mailId}: Used to trigger emails via a Firebase Extension.
 *
 * @key_security_decisions
 *   - User listing is generally disallowed for privacy.
 *   - The /mail collection is write-only, intended for server-side extensions to process and send emails.
 *   - Ambiguous relationships default to strict owner-only access.
 *
 * @denormalization_for_authorization
 *   - To avoid costly `get()` operations, the tenantId is often denormalized onto documents within a tenant's subcollections.
 *     This allows rules to quickly verify that the authenticated user belongs to the tenant associated with the data.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     * @path N/A (Helper function)
     * @allow N/A
     * @deny N/A
     * @principle Authentication: Ensures that only authenticated users can access certain resources.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user's ID matches the provided user ID.
     * @path N/A (Helper function)
     * @allow N/A
     * @deny N/A
     * @principle Ownership: Verifies that the user is accessing their own data.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of an existing document.
     * @path N/A (Helper function)
     * @allow N/A
     * @deny N/A
     * @principle Ownership and Existence: Combines ownership check with a check for document existence,
     *            preventing operations on non-existent documents.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId));
    }

    /**
     * @description Gets the tenant ID associated with the authenticated user.
     * @path N/A (Helper function)
     * @allow N/A
     * @deny N/A
     * @principle Tenant Isolation: Ensures users can only access data within their own tenant.
     */
    function getTenantId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId;
    }

    /**
     * @description Checks if the tenant ID in the request matches the authenticated user's tenant ID.
     * @path N/A (Helper function)
     * @allow N/A
     * @deny N/A
     * @principle Tenant Isolation: Enforces that users can only access resources within their associated tenant.
     */
    function isTenantResource(tenantId) {
      return isSignedIn() && getTenantId() == tenantId;
    }

   /**
     * @description Checks if the authenticated user is an admin within the specified tenant.
     *              Note:  This requires that user roles are stored within the
     *              /tenants/{tenantId}/users/{userId} document.
     * @path N/A (Helper function)
     * @allow N/A
     * @deny N/A
     * @principle Role-Based Access Control: Restricts access to resources based on the user's role within the tenant.
     */
    function isAdmin(tenantId) {
        return get(/databases/$(database)/documents/tenants/$(tenantId)/users/$(request.auth.uid)).data.role == 'admin';
    }

    /**
     * @description Matches the top-level collection that maps user UIDs to tenant IDs.
     * @path /users/{userId}
     * @allow (create) If the authenticated user's ID matches the userId.
     * @deny (read, update, delete) Always.
     * @principle Restricts access to the user's own tenant ID mapping.
     */
    match /users/{userId} {
      allow get: if false;
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Matches the collection that stores tenant information.
     * @path /tenants/{tenantId}
     * @allow (get, list) If the user is an admin of the tenant.
     * @deny (create, update, delete) Always.
     * @principle Restricts tenant management to admins.
     */
    match /tenants/{tenantId} {
      allow get: if isTenantResource(tenantId) && isAdmin(tenantId);
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Matches the sub-collection for product categories within a tenant.
     * @path /tenants/{tenantId}/categories/{categoryId}
     * @allow (read, list) If the user is part of the tenant.
     * @allow (create, update, delete) If the user is an admin of the tenant.
     * @deny If the user is not part of the tenant or not an admin for write operations.
     * @principle Tenant-based access control for categories.
     */
    match /tenants/{tenantId}/categories/{categoryId} {
      allow get: if isTenantResource(tenantId);
      allow list: if isTenantResource(tenantId);
      allow create: if isTenantResource(tenantId) && isAdmin(tenantId);
      allow update: if isTenantResource(tenantId) && isAdmin(tenantId);
      allow delete: if isTenantResource(tenantId) && isAdmin(tenantId);
    }

    /**
     * @description Matches the sub-collection for products within a tenant.
     * @path /tenants/{tenantId}/products/{productId}
     * @allow (read, list) If the user is part of the tenant.
     * @allow (create, update, delete) If the user is an admin of the tenant.
     * @deny If the user is not part of the tenant or not an admin for write operations.
     * @principle Tenant-based access control for products.
     */
    match /tenants/{tenantId}/products/{productId} {
      allow get: if isTenantResource(tenantId);
      allow list: if isTenantResource(tenantId);
      allow create: if isTenantResource(tenantId) && isAdmin(tenantId);
      allow update: if isTenantResource(tenantId) && isAdmin(tenantId);
      allow delete: if isTenantResource(tenantId) && isAdmin(tenantId);
    }

    /**
     * @description Matches the sub-collection for customers within a tenant.
     * @path /tenants/{tenantId}/customers/{customerId}
     * @allow (read, list) If the user is part of the tenant.
     * @allow (create, update, delete) If the user is an admin of the tenant.
     * @deny If the user is not part of the tenant or not an admin for write operations.
     * @principle Tenant-based access control for customers.
     */
    match /tenants/{tenantId}/customers/{customerId} {
      allow get: if isTenantResource(tenantId);
      allow list: if isTenantResource(tenantId);
      allow create: if isTenantResource(tenantId) && isAdmin(tenantId);
      allow update: if isTenantResource(tenantId) && isAdmin(tenantId);
      allow delete: if isTenantResource(tenantId) && isAdmin(tenantId);
    }

    /**
     * @description Matches the sub-collection for POS orders within a tenant.
     * @path /tenants/{tenantId}/orders/{orderId}
     * @allow (read, list) If the user is part of the tenant.
     * @allow (create, update, delete) If the user is an admin of the tenant.
     * @deny If the user is not part of the tenant or not an admin for write operations.
     * @principle Tenant-based access control for orders.
     */
    match /tenants/{tenantId}/orders/{orderId} {
      allow get: if isTenantResource(tenantId);
      allow list: if isTenantResource(tenantId);
      allow create: if isTenantResource(tenantId) && isAdmin(tenantId);
