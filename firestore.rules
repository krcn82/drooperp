      allow delete: if isTenantResource(tenantId) && isAdmin(tenantId);
    }

    /**
     * @description Matches the sub-collection for restaurant tables within a tenant.
     * @path /tenants/{tenantId}/tables/{tableId}
     * @allow (read, list) If the user is part of the tenant.
     * @allow (create, update, delete) If the user is an admin of the tenant.
     * @deny If the user is not part of the tenant or not an admin for write operations.
     * @principle Tenant-based access control for tables.
     */
    match /tenants/{tenantId}/tables/{tableId} {
