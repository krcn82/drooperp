    /**
     * @description Sub-collection for credentials and status for third-party integrations like Wolt or Foodora.
     * @path /tenants/{tenantId}/integrations/{platformId}
     * @allow (get) Tenant members can read integration data.
     * @deny (create) Non-tenant members cannot create integrations.
     * @principle Restricts access to tenant-owned data to tenant members.
     */
    match /tenants/{tenantId}/integrations/{platformId} {
      allow get: if isTenantMember(tenantId);
      allow list: if false;
      allow create: if isTenantMember(tenantId);
