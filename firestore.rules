    /**
     * @description Global collection for subscription plans.
     * @path /global/plans/{planId}
     * @allow (get, list) Any authenticated user.
     * @deny (create, update, delete) No one can create, update, or delete a plan document.
     * @principle Globally accessible subscription plans.
     */
    match /global/plans/{planId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;
    }

