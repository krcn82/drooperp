      allow delete: if isTenantMember(tenantId);
    }

     /**
     * @description Sub-collection for logging FinanzOnline API submissions.
     * @path /tenants/{tenantId}/finanzOnlineLogs/{logId}
     * @allow (get) Tenant members can read log data.
     * @deny (create) Non-tenant members cannot create logs.
     * @principle Restricts access to tenant-owned data to tenant members.
     */
    match /tenants/{tenantId}/finanzOnlineLogs/{logId} {
      allow get: if isTenantMember(tenantId);
      allow list: if false;
      allow create: if isTenantMember(tenantId);
      allow update: if isTenantMember(tenantId);
      allow delete: if isTenantMember(tenantId);
    }

    /**
     * @description Sub-collection for logging critical system errors within a tenant.
     * @path /tenants/{tenantId}/systemErrors/{errorId}
     * @allow (get) Tenant members can read error logs.
     * @deny (create) Non-tenant members cannot create error logs.
     * @principle Restricts access to tenant-owned data to tenant members.
     */
    match /tenants/{tenantId}/systemErrors/{errorId} {
      allow get: if isTenantMember(tenantId);
      allow list: if false;
      allow create: if isTenantMember(tenantId);
      allow update: if isTenantMember(tenantId);
      allow delete: if isTenantMember(tenantId);
    }

    /**
     * @description Global collection for subscription plans.
     * @path /global/plans/{planId}
     * @allow (get) Any authenticated user can read plan data.
     * @deny (create) No client-side creation of plans allowed.
     * @principle Allows public read access to pricing plans.
     */
    match /global/plans/{planId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Sub-collection for messages within an AI chat session.
     * @path /tenants/{tenantId}/aiChats/{chatId}/messages/{messageId}
     * @allow (get) Tenant members can read chat messages.
     * @deny (create) Non-tenant members cannot create chat messages.
     * @principle Restricts access to tenant-owned data to tenant members.
     */
    match /tenants/{tenantId}/aiChats/{chatId}/messages/{messageId} {
      allow get: if isTenantMember(tenantId);
      allow list: if false;
      allow create: if isTenantMember(tenantId);
      allow update: if isTenantMember(tenantId);
      allow delete: if isTenantMember(tenantId);
    }

    /**
     * @description Sub-collection for orders from external POS/delivery platforms.
     * @path /tenants/{tenantId}/posOrders/{orderId}
     * @allow (get) Tenant members can read POS order data.
     * @deny (create) Non-tenant members cannot create POS orders.
     * @principle Restricts access to tenant-owned data to tenant members.
     */
    match /tenants/{tenantId}/posOrders/{orderId} {
