/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a multi-tenant security model where each tenant's data is isolated.
 *   Users are associated with tenants, and access is generally restricted to resources within their tenant.
 *   Additionally, a global "plans" collection exists for subscription plan definitions, accessible to all.
 *
 * Data Structure:
 * - /users/{userId}: Maps user IDs to tenant IDs. This collection provides a fast way to determine which tenant a user belongs to.
 * - /tenants/{tenantId}: Stores tenant-specific information.
 * - /tenants/{tenantId}/*: Most data is nested under tenants, ensuring logical separation and preventing cross-tenant data access.
 * - /global/plans/{planId}: Contains publicly readable subscription plans.
 * - /mail/{mailId}: Used for triggering email sending. Write-only and restricted to the Firebase Extensions service account.
 *
 * Key Security Decisions:
 * - Strict Tenant Isolation:  Most rules enforce that users can only access data belonging to their assigned tenant.
 * - User Listing Denied: Listing users within a tenant is disallowed to protect user privacy.
 * - Plans Publicly Readable: Subscription plans are publicly readable to allow all users to view available options.
 * - Mail Collection Restricted: The /mail collection is write-only and should only be accessed by the Firebase Extensions service account.
 * - Flexible Data Shapes: The rules prioritize authorization over strict schema validation for prototyping speed.
 *
 * Denormalization for Authorization:
 * - User-Tenant Mapping: The /users/{userId} collection directly maps user IDs to tenant IDs, avoiding the need to query the /tenants collection for basic authorization.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Maps user UIDs to tenant IDs for security rules.
     * @path /users/{userId}
     * @allow (create) If the user's UID matches the document ID.
     * @deny (create) If the user's UID does not match the document ID.
     * @allow (get) If the user's UID matches the document ID.
     * @deny (get) If the user's UID does not match the document ID.
     * @deny (list) Listing users is not allowed.
     * @allow (update) If the user's UID matches the document ID.
     * @deny (update) If the user's UID does not match the document ID.
     * @allow (delete) If the user's UID matches the document ID.
     * @deny (delete) If the user's UID does not match the document ID.
     * @principle Enforces user-ownership for mapping a user UID to a tenant ID.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isSignedIn() {
        return request.auth != null;
      }

      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow update: if isSignedIn() && isOwner(userId) && resource != null && request.resource.data.id == resource.data.id;
      allow delete: if isSignedIn() && isOwner(userId) && resource != null;
    }

    /**
     * @description Stores tenant-specific information.
     * @path /tenants/{tenantId}
     * @allow (create) Not allowed.
     * @deny (create) No one can create tenants via client.
     * @allow (get) Not allowed.
     * @deny (get) No one can get tenants via client.
     * @deny (list) No one can list tenants.
     * @allow (update) Not allowed.
     * @deny (update) No one can update tenants via client.
     * @allow (delete) Not allowed.
     * @deny (delete) No one can delete tenants via client.
     * @principle Tenant information is managed server-side, not directly modifiable by end-users.
     */
    match /tenants/{tenantId} {
      allow create: if false;
      allow get: if false;
      allow list: if false;
      allow update: if false;
      allow delete: if false;

       /**
        * @description Sub-collection for product categories within a tenant.
        * @path /tenants/{tenantId}/categories/{categoryId}
        * @allow (create) If the user is authenticated and has 'admin' role in the tenant.
        * @deny (create) If the user is not authenticated or doesn't have 'admin' role.
        * @allow (get) If the user is authenticated and belongs to the tenant.
        * @deny (get) If the user is not authenticated or doesn't belong to the tenant.
        * @allow (list) If the user is authenticated and belongs to the tenant.
        * @deny (list) If the user is not authenticated or doesn't belong to the tenant.
        * @allow (update) If the user is authenticated and has 'admin' role in the tenant.
        * @deny (update) If the user is not authenticated or doesn't have 'admin' role.
        * @allow (delete) If the user is authenticated and has 'admin' role in the tenant.
        * @deny (delete) If the user is not authenticated or doesn't have 'admin' role.
        * @principle Restricts category access to authenticated users within the correct tenant, admin role required to create, update and delete.
        */
       match /categories/{categoryId} {
          function isSignedIn() {
            return request.auth != null;
          }
          function isTenantUser(tenantId) {
              return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;
          }
          function isAdmin(tenantId) {
              return get(/databases/$(database)/documents/tenants/$(tenantId)/users/$(request.auth.uid)).data.role == 'admin';
          }
          allow create: if isSignedIn() && isTenantUser(tenantId) && isAdmin(tenantId);
          allow get: if isSignedIn() && isTenantUser(tenantId);
          allow list: if isSignedIn() && isTenantUser(tenantId);
          allow update: if isSignedIn() && isTenantUser(tenantId) && isAdmin(tenantId) && resource != null;
          allow delete: if isSignedIn() && isTenantUser(tenantId) && isAdmin(tenantId) && resource != null;
       }

      /**
       * @description Sub-collection for products within a tenant.
       * @path /tenants/{tenantId}/products/{productId}
       * @allow (create) If the user is authenticated and has 'admin' role in the tenant.
       * @deny (create) If the user is not authenticated or doesn't have 'admin' role.
       * @allow (get) If the user is authenticated and belongs to the tenant.
       * @deny (get) If the user is not authenticated or doesn't belong to the tenant.
       * @allow (list) If the user is authenticated and belongs to the tenant.
       * @deny (list) If the user is not authenticated or doesn't belong to the tenant.
       * @allow (update) If the user is authenticated and has 'admin' role in the tenant and the document exists.
       * @deny (update) If the user is not authenticated or doesn't have 'admin' role or the document doesn't exist.
       * @allow (delete) If the user is authenticated and has 'admin' role in the tenant and the document exists.
       * @deny (delete) If the user is not authenticated or doesn't have 'admin' role or the document doesn't exist.
       * @principle Restricts product access to authenticated users within the correct tenant, admin role required to create, update and delete.
       */
      match /products/{productId} {
        function isSignedIn() {
          return request.auth != null;
