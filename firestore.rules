    }

    /**
     * @description Sub-collection for logging incoming webhook API calls.
     * @path /tenants/{tenantId}/auditLogs/{logId}
     * @allow (get) Tenant members can read audit logs.
     * @deny (create) Non-tenant members cannot create audit logs.
     * @principle Restricts access to tenant-owned data to tenant members.
     */
    match /tenants/{tenantId}/auditLogs/{logId} {
