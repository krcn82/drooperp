      allow delete: if isTenantResource(tenantId) && isAdmin(tenantId);
    }

    /**
     * @description Matches the sub-collection for Kitchen Display System orders within a tenant.
     * @path /tenants/{tenantId}/kdsOrders/{kdsId}
     * @allow (read, list) If the user is part of the tenant.
     * @allow (create, update, delete) If the user is an admin of the tenant.
     * @deny If the user is not part of the tenant or not an admin for write operations.
     * @principle Tenant-based access control for KDS orders.
     */
    match /tenants/{tenantId}/kdsOrders/{kdsId} {
      allow get: if isTenantResource(tenantId);
      allow list: if isTenantResource(tenantId);
      allow create: if isTenantResource(tenantId) && isAdmin(tenantId);
      allow update: if isTenantResource(tenantId) && isAdmin(tenantId);
      allow delete: if isTenantResource(tenantId) && isAdmin(tenantId);
    }

    /**
     * @description Matches the sub-collection for users within a tenant.
     * @path /tenants/{tenantId}/users/{userId}
     * @allow (get) If the user is accessing their own user document within the tenant, or if the requester is an admin in the tenant.
     * @allow (list) if the user is an admin in the tenant.
     * @allow (create) If the requester is an admin in the tenant.
     * @allow (update, delete) If the user is updating their own user document within the tenant, or if the requester is an admin in the tenant.
     * @deny If the user is not part of the tenant or attempts to access another user's document without admin privileges.
     * @principle Tenant-based access control for users.
     */
    match /tenants/{tenantId}/users/{userId} {
        allow get: if (isTenantResource(tenantId) && isOwner(userId)) || (isTenantResource(tenantId) && isAdmin(tenantId));
        allow list: if isTenantResource(tenantId) && isAdmin(tenantId);
        allow create: if isTenantResource(tenantId) && isAdmin(tenantId);
        allow update: if (isTenantResource(tenantId) && isOwner(userId)) || (isTenantResource(tenantId) && isAdmin(tenantId));
        allow delete: if isTenantResource(tenantId) && isAdmin(tenantId);
    }

    /**
     * @description Matches the sub-collection for payments within a tenant.
     * @path /tenants/{tenantId}/payments/{paymentId}
     * @allow (read, list) If the user is part of the tenant.
     * @allow (create, update, delete) If the user is an admin of the tenant.
     * @deny If the user is not part of the tenant or not an admin for write operations.
     * @principle Tenant-based access control for payments.
     */
    match /tenants/{tenantId}/payments/{paymentId} {
      allow get: if isTenantResource(tenantId);
      allow list: if isTenantResource(tenantId);
      allow create: if isTenantResource(tenantId) && isAdmin(tenantId);
      allow update: if isTenantResource(tenantId) && isAdmin(tenantId);
      allow delete: if isTenantResource(tenantId) && isAdmin(tenantId);
    }

    /**
     * @description Matches the document for general settings within a tenant.
     * @path /tenants/{tenantId}/settings/general
     * @allow (read) If the user is part of the tenant.
     * @allow (create, update) If the user is an admin of the tenant.
     * @deny (delete) Always.
     * @principle Tenant-based access control for settings.
     */
    match /tenants/{tenantId}/settings/general {
      allow get: if isTenantResource(tenantId);
      allow list: if false;
      allow create: if isTenantResource(tenantId) && isAdmin(tenantId);
      allow update: if isTenantResource(tenantId) && isAdmin(tenantId);
