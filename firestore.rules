/**
 * @file Firestore Security Rules
 * @version 2
 * @description This ruleset enforces a multi-tenant security model with user-based access control.
 *
 * Data Structure:
 * - /users/{userId}: Maps user UIDs to tenant IDs. Only the user themselves can read/write.
 * - /tenants/{tenantId}: Stores tenant-level data. Only tenant admins can read/write.
 * - /tenants/{tenantId}/*: Subcollections and documents under a tenant are generally restricted to users within that tenant.
 * - /global/plans/{planId}: Publicly readable collection of subscription plans. Writes are denied.
 * - /mail/{mailId}: Only the server can create documents here to trigger emails.
 *
 * Key Security Decisions:
 * - Strict user ownership for /users/{userId} documents.
 * - Tenant-level access control for data under /tenants/{tenantId}.
 * - Public read access for /global/plans/{planId}.
 * - No client-side listing of users within a tenant; access must be managed through other mechanisms.
 *
 * Denormalization for Authorization:
 * - User role (admin, cashier, viewer) is stored directly in the /tenants/{tenantId}/users/{userId} document for simplified authorization checks.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the request is made by the owner of the resource.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is the owner and the resource exists.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Checks if the requesting user has the 'admin' role within the tenant.
     */
    function isAdminInTenant(tenantId) {
      return get(/databases/$(database)/documents/tenants/$(tenantId)/users/$(request.auth.uid)).data.role == 'admin';
    }

    /**
     * @description Checks if the requesting user is a member of the tenant.
     */
    function isMemberOfTenant(tenantId) {
      return get(/databases/$(database)/documents/tenants/$(tenantId)/users/$(request.auth.uid)).data.tenantId == tenantId;
    }

    /**
     * @description Top-level collection to map user UIDs to tenant IDs for security rules.
     * @path /users/{userId}
     * @allow (create) User with UID 'user123' can create their own UserTenant document.
     * @deny (create) User with UID 'user123' cannot create a UserTenant document for 'user456'.
     * @principle Enforces document ownership for writes; only the authenticated user can create their UserTenant document.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.tenantId is string && request.auth.uid == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.tenantId == resource.data.tenantId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Collection to store tenant information.
     * @path /tenants/{tenantId}
     * @allow (get) Any authenticated user can read a tenant document.
     * @deny (create) A non-admin user cannot create a tenant document.
     * @principle Only tenant admins can create, update, or delete tenant information.
     */
    match /tenants/{tenantId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if isAdminInTenant(tenantId);
      allow update: if isAdminInTenant(tenantId);
      allow delete: if isAdminInTenant(tenantId);
    }

     /**
      * @description Sub-collection for product categories within a tenant.
      * @path /tenants/{tenantId}/categories/{categoryId}
      * @allow (create) Tenant admin can create a category.
      * @deny (delete) Non-tenant admin cannot delete a category.
      * @principle Tenant admins manage categories.
      */
     match /tenants/{tenantId}/categories/{categoryId} {
        allow get: if isSignedIn();
        allow list: if isSignedIn();
        allow create: if isAdminInTenant(tenantId);
        allow update: if isAdminInTenant(tenantId);
        allow delete: if isAdminInTenant(tenantId);
     }

    /**
     * @description Sub-collection for products within a tenant.
     * @path /tenants/{tenantId}/products/{productId}
     * @allow (create) Tenant admin can create a product.
     * @deny (delete) Non-tenant admin cannot delete a product.
     * @principle Tenant admins manage products.
     */
    match /tenants/{tenantId}/products/{productId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isAdminInTenant(tenantId);
      allow update: if isAdminInTenant(tenantId);
      allow delete: if isAdminInTenant(tenantId);
    }

    /**
     * @description Sub-collection for customers within a tenant.
     * @path /tenants/{tenantId}/customers/{customerId}
     * @allow (create) Tenant admin can create a customer.
     * @deny (delete) Non-tenant admin cannot delete a customer.
     * @principle Tenant admins manage customers.
     */
    match /tenants/{tenantId}/customers/{customerId} {
        allow get: if isSignedIn();
        allow list: if isSignedIn();
        allow create: if isAdminInTenant(tenantId);
        allow update: if isAdminInTenant(tenantId);
        allow delete: if isAdminInTenant(tenantId);
    }

    /**
     * @description Sub-collection for POS orders within a tenant.
     * @path /tenants/{tenantId}/orders/{orderId}
     * @allow (create) Tenant admin can create an order.
     * @deny (delete) Non-tenant admin cannot delete an order.
     * @principle Tenant admins manage orders.
     */
    match /tenants/{tenantId}/orders/{orderId} {
        allow get: if isSignedIn();
        allow list: if isSignedIn();
        allow create: if isAdminInTenant(tenantId);
        allow update: if isAdminInTenant(tenantId);
        allow delete: if isAdminInTenant(tenantId);
    }

    /**
     * @description Sub-collection for restaurant tables within a tenant.
     * @path /tenants/{tenantId}/tables/{tableId}
     * @allow (create) Tenant admin can create a table.
     * @deny (delete) Non-tenant admin cannot delete a table.
     * @principle Tenant admins manage tables.
     */
    match /tenants/{tenantId}/tables/{tableId} {
        allow get: if isSignedIn();
        allow list: if isSignedIn();
        allow create: if isAdminInTenant(tenantId);
        allow update: if isAdminInTenant(tenantId);
        allow delete: if isAdminInTenant(tenantId);
    }

    /**
     * @description Sub-collection for Kitchen Display System orders within a tenant.
     * @path /tenants/{tenantId}/kdsOrders/{kdsId}
     * @allow (create) Tenant admin can create a KDS order.
     * @deny (delete) Non-tenant admin cannot delete a KDS order.
     * @principle Tenant admins manage KDS orders.
     */
    match /tenants/{tenantId}/kdsOrders/{kdsId} {
        allow get: if isSignedIn();
        allow list: if isSignedIn();
        allow create: if isAdminInTenant(tenantId);
        allow update: if isAdminInTenant(tenantId);
        allow delete: if isAdminInTenant(tenantId);
    }

    /**
     * @description Sub-collection for users within a tenant.
     * @path /tenants/{tenantId}/users/{userId}
     * @allow (create) Tenant admin can create a user.
     * @deny (delete) Non-tenant admin cannot delete a user.
     * @principle Tenant admins manage users within their tenant.
     */
    match /tenants/{tenantId}/users/{userId} {
      allow get: if isAdminInTenant(tenantId) || isOwner(userId);
      allow list: if false; // Explicitly disallow client-side listing of users.
      allow create: if isAdminInTenant(tenantId);
      allow update: if isAdminInTenant(tenantId);
      allow delete: if isAdminInTenant(tenantId);
    }

    /**
     * @description Sub-collection for payments within a tenant.
     * @path /tenants/{tenantId}/payments/{paymentId}
     * @allow (create) Tenant admin can create a payment.
     * @deny (delete) Non-tenant admin cannot delete a payment.
     * @principle Tenant admins manage payments.
     */
    match /tenants/{tenantId}/payments/{paymentId} {
        allow get: if isSignedIn();
        allow list: if isSignedIn();
        allow create: if isAdminInTenant(tenantId);
        allow update: if isAdminInTenant(tenantId);
        allow delete: if isAdminInTenant(tenantId);
    }

    /**
     * @description Document for general settings within a tenant.
     * @path /tenants/{tenantId}/settings/general
     * @allow (get) Any authenticated user can read general settings.
     * @deny (update) Non-tenant admin cannot update general settings.
     * @principle Tenant admins manage general settings.
     */
    match /tenants/{tenantId}/settings/general {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if isAdminInTenant(tenantId);
      allow update: if isAdminInTenant(tenantId);
      allow delete: if isAdminInTenant(tenantId);
    }

    /**
     * @description Document for module settings within a tenant.
     * @path /tenants/{tenantId}/settings/modules
     * @allow (get) Any authenticated user can read module settings.
     * @deny (update) Non-tenant admin cannot update module settings.
     * @principle Tenant admins manage module settings.
     */
    match /tenants/{tenantId}/settings/modules {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if isAdminInTenant(tenantId);
      allow update: if isAdminInTenant(tenantId);
      allow delete: if isAdminInTenant(tenantId);
    }

   /**
    * @description Document for automation rule settings within a tenant.
    * @path /tenants/{tenantId}/settings/automationRules
    * @allow (get) Any authenticated user can read automation rule settings.
    * @deny (update) Non-tenant admin cannot update automation rule settings.
    * @principle Tenant admins manage automation rule settings.
    */
    match /tenants/{tenantId}/settings/automationRules {
        allow get: if isSignedIn();
        allow list: if false;
        allow create: if isAdminInTenant(tenantId);
        allow update: if isAdminInTenant(tenantId);
        allow delete: if isAdminInTenant(tenantId);
    }


    /**
     * @description Singleton document for RKSV fiscal certificate and configuration for a tenant.
     * @path /tenants/{tenantId}/rksvConfig
     * @allow (get) Only tenant admins can read RKSV config.
     * @deny (update) Non-tenant admin cannot update RKSV config.
     * @principle Tenant admins manage RKSV configuration.
     */
    match /tenants/{tenantId}/rksvConfig {
      allow get: if isAdminInTenant(tenantId);
      allow list: if false;
      allow create: if isAdminInTenant(tenantId);
      allow update: if isAdminInTenant(tenantId);
      allow delete: if isAdminInTenant(tenantId);
    }

    /**
     * @description Sub-collection for the RKSV cryptographic signature chain.
     * @path /tenants/{tenantId}/signatures/{signatureId}
     * @allow (create) Only tenant admins can create a signature.
     * @deny (delete) Non-tenant admin cannot delete a signature.
     * @principle RKSV signatures are managed by tenant admins or backend functions.
     */
    match /tenants/{tenantId}/signatures/{signatureId} {
      allow get: if isAdminInTenant(tenantId);
      allow list: if isAdminInTenant(tenantId);
      allow create: if isAdminInTenant(tenantId);
      allow update: if isAdminInTenant(tenantId);
      allow delete: if isAdminInTenant(tenantId);
    }

    /**
     * @description Sub-collection for daily Z-Reports (Tagesabschluss).
     * @path /tenants/{tenantId}/zReports/{reportId}
     * @allow (get) Only tenant admins can read Z-Reports.
     * @deny (delete) Non-tenant admin cannot delete Z-Reports.
     * @principle Z-Reports are managed by tenant admins.
     */
    match /tenants/{tenantId}/zReports/{reportId} {
      allow get: if isAdminInTenant(tenantId);
      allow list: if isAdminInTenant(tenantId);
      allow create: if isAdminInTenant(tenantId);
      allow update: if isAdminInTenant(tenantId);
      allow delete: if isAdminInTenant(tenantId);
    }

    /**
     * @description Sub-collection for logging FinanzOnline API submissions.
     * @path /tenants/{tenantId}/finanzOnlineLogs/{logId}
     */
    match /tenants/{tenantId}/finanzOnlineLogs/{logId} {
      allow get: if isAdminInTenant(tenantId);
      allow list: if isAdminInTenant(tenantId);
      allow create: if isAdminInTenant(tenantId);
      allow update: if isAdminInTenant(tenantId);
      allow delete: if isAdminInTenant(tenantId);
    }

   /**
    * @description Sub-collection for logging critical system errors within a tenant.
    * @path /tenants/{tenantId}/systemErrors/{errorId}
    */
    match /tenants/{tenantId}/systemErrors/{errorId} {
      allow get: if isAdminInTenant(tenantId);
      allow list: if isAdminInTenant(tenantId);
      allow create: if isAdminInTenant(tenantId);
      allow update: if isAdminInTenant(tenantId);
      allow delete: if isAdminInTenant(tenantId);
    }

    /**
     * @description Stores credentials and status for third-party integrations like Wolt or Foodora.
     * @path /tenants/{tenantId}/integrations/{platformId}
     */
    match /tenants/{tenantId}/integrations/{platformId} {
      allow get: if isAdminInTenant(tenantId);
      allow list: if isAdminInTenant(tenantId);
      allow create: if isAdminInTenant(tenantId);
      allow update: if isAdminInTenant(tenantId);
      allow delete: if isAdminInTenant(tenantId);
    }

    /**
     * @description Sub-collection for cash register sessions.
     * @path /tenants/{tenantId}/cashRegisters/{registerId}
     */
    match /tenants/{tenantId}/cashRegisters/{registerId} {
      allow get: if isAdminInTenant(tenantId);
      allow list: if isAdminInTenant(tenantId);
      allow create: if isAdminInTenant(tenantId);
      allow update: if isAdminInTenant(tenantId);
      allow delete: if isAdminInTenant(tenantId);
    }

    /**
     * @description Sub-collection for generated reports.
     * @path /tenants/{tenantId}/reports/{reportId}
     */
    match /tenants/{tenantId}/reports/{reportId} {
      allow get: if isAdminInTenant(tenantId);
      allow list: if isAdminInTenant(tenantId);
      allow create: if isAdminInTenant(tenantId);
      allow update: if isAdminInTenant(tenantId);
      allow delete: if isAdminInTenant(tenantId);
    }

    /**
     * @description Global collection for subscription plans.
     * @path /global/plans/{planId}
     * @allow (get) Anyone can read a subscription plan.
     * @deny (create) No one can create a subscription plan via client-side rules.
     * @principle Public read access, restricted writes.
     */
    match /global/plans/{planId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Sub-collection for messages within an AI chat session.
     * @path /tenants/{tenantId}/aiChats/{chatId}/messages/{messageId}
     */
    match /tenants/{tenantId}/aiChats/{chatId}/messages/{messageId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isAdminInTenant(tenantId); // TODO: Should be restricted to users in the tenant
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Sub-collection for orders from external POS/delivery platforms.
     * @path /tenants/{tenantId}/posOrders/{orderId}
     */
    match /tenants/{tenantId}/posOrders/{orderId} {
      allow get: if isAdminInTenant(tenantId);
      allow list: if isAdminInTenant(tenantId);
      allow create: if isAdminInTenant(tenantId); // TODO: Should be restricted to backend/integration
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Sub-collection for logging incoming webhook API calls.
     * @path /tenants/{tenantId}/auditLogs/{logId}
     */
    match /tenants/{tenantId}/auditLogs/{logId} {
      allow get: if isAdminInTenant(tenantId);
      allow list: if isAdminInTenant(tenantId);
      allow create: if isAdminInTenant(tenantId); // TODO: Should be restricted to backend/integration
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Sub-collection for user and system notifications within a tenant.
     * @path /tenants/{tenantId}/notifications/{notificationId}
     */
    match /tenants/{tenantId}/notifications/{notificationId} {
      allow get: if isAdminInTenant(tenantId) || isMemberOfTenant(tenantId); // Adjust as needed
      allow list: if isAdminInTenant(tenantId) || isMemberOfTenant(tenantId); // Adjust as needed
      allow create: if isAdminInTenant(tenantId); // TODO: Should be restricted to backend only
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Collection for triggering email sending via Firebase Extensions (e.g., SendGrid, Mailgun).
     * @path /mail/{mailId}
     * @allow (create) Only the server can create mail documents.
     * @deny (get) Clients cannot read mail documents.
     * @principle Server-only writes to trigger emails.
     */
    match /mail/{mailId} {
      allow get: if false;
      allow list: if false;
      allow create: if false; // Enforce create permission if the server/function creating mail documents has admin privileges
      allow update: if false;
      allow delete: if false;
    }
  }
}