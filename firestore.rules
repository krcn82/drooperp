rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user belongs to a specific tenant.
    function isUserOfTenant(tenantId) {
      // It checks the /users/{uid} document to see if the tenantId matches.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;
    }

    // Rule 1: Secure the top-level 'users' collection.
    // Users can read/write their own mapping document to know their tenant, but not others.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rule 2: Secure all tenant data.
    // A user can read or write any document or subcollection inside a tenant's path
    // IF they are a user of that tenant (verified by the isUserOfTenant function).
    match /tenants/{tenantId}/{document=**} {
      allow read, write: if request.auth != null && isUserOfTenant(tenantId);
    }

    // Rule 3: Allow read access to global plans for all authenticated users.
    match /global/plans/{planId} {
        allow read: if request.auth != null;
    }
  }
}