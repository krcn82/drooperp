/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a multi-tenant security model where users are associated with tenants.
 *   Access is primarily role-based within a tenant, with an emphasis on securing data within the tenant's data tree.
 *
 * Data Structure:
 * - /users/{userId}: Maps user UIDs to tenant IDs.  This is the entry point for determining a user's tenant.
 * - /tenants/{tenantId}: Stores tenant-specific information.
 * - All other collections are nested under /tenants/{tenantId}/..., representing tenant-owned data.
 * - /global/plans/{planId}: Stores publicly readable subscription plan data.
 * - /mail/{mailId}: Holds instructions for sending email via a Firebase Extension. This collection is write-only by backend.
 *
 * Key Security Decisions:
 * - User Listing Disallowed:  The ruleset does not allow listing of all users in the system.
 * - Tenant-Scoped Data: All data except for global plans and mail sending instructions are scoped to a specific tenant.
 * - Strict Ownership:  Write access to user-specific documents (e.g., /users/{userId}) is restricted to the authenticated user.
 * - Read-only Global Plans: The /global/plans collection is publicly readable but not writable via the client.
 *
 * Denormalization for Authorization:
 * - UserTenant: The /users/{userId} document MUST contain the `tenantId` to authorize access to tenant-specific resources.  This avoids needing to query across collections during rule evaluation.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user's UID matches the provided userId.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user's UID matches the resource data's userId.
     */
    function isResourceOwner(resourceUserId) {
      return isSignedIn() && request.auth.uid == resourceUserId;
    }

    /**
     * @description Checks if the authenticated user's UID matches the provided userId, and the resource exists.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId));
    }

    /**
     * @description Gets the tenant ID from the /users/{userId} document.
     */
    function getTenantId(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.tenantId;
    }

    /**
     * @description Checks if the authenticated user is a member of the specified tenant.
     */
    function isTenantMember(tenantId) {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;
    }

    /**
     * @description Top-level collection to map user UIDs to tenant IDs for security rules.
     * @path /users/{userId}
     * @allow (create) User with UID 'user123' can create their own UserTenant document.
     * @deny (create) User with UID 'user123' cannot create a UserTenant document for another user ('user456').
     * @principle Enforces document ownership for writes, validates relational integrity.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.tenantId is string;
      allow update: if isOwner(userId) && get(/databases/$(database)/documents/users/$(userId)).data.tenantId == request.resource.data.tenantId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Collection to store tenant information.
     * @path /tenants/{tenantId}
     * @allow (get) Any authenticated user can read tenant data.
     * @deny (create) No client-side creation of tenants allowed.
     * @principle Restricts access to tenant management to backend.
     */
    match /tenants/{tenantId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Sub-collection for product categories within a tenant.
     * @path /tenants/{tenantId}/categories/{categoryId}
     * @allow (create) Only tenant members can create categories.
     * @deny (list) Listing categories is not allowed.
     * @principle Restricts access to tenant-owned data to tenant members.
     */
    match /tenants/{tenantId}/categories/{categoryId} {
      allow get: if isTenantMember(tenantId);
      allow list: if false;
      allow create: if isTenantMember(tenantId);
      allow update: if isTenantMember(tenantId);
      allow delete: if isTenantMember(tenantId);
    }

    /**
     * @description Sub-collection for products within a tenant.
     * @path /tenants/{tenantId}/products/{productId}
     * @allow (get) Any tenant member can read product data.
     * @deny (create) Non-tenant members cannot create products.
     * @principle Restricts access to tenant-owned data to tenant members.
     */
    match /tenants/{tenantId}/products/{productId} {
      allow get: if isTenantMember(tenantId);
      allow list: if false;
      allow create: if isTenantMember(tenantId);
      allow update: if isTenantMember(tenantId);
      allow delete: if isTenantMember(tenantId);
    }

    /**
     * @description Sub-collection for customers within a tenant.
     * @path /tenants/{tenantId}/customers/{customerId}
     * @allow (get) Tenant members can read customer data.
     * @deny (list) Listing all customers is not allowed.
     * @principle Restricts access to tenant-owned data to tenant members.
     */
    match /tenants/{tenantId}/customers/{customerId} {
      allow get: if isTenantMember(tenantId);
      allow list: if false;
      allow create: if isTenantMember(tenantId);
      allow update: if isTenantMember(tenantId);
      allow delete: if isTenantMember(tenantId);
    }

    /**
     * @description Sub-collection for POS orders within a tenant.
     * @path /tenants/{tenantId}/orders/{orderId}
     * @allow (get) Tenant members can read order data.
     * @deny (create) Non-tenant members cannot create orders.
     * @principle Restricts access to tenant-owned data to tenant members.
     */
    match /tenants/{tenantId}/orders/{orderId} {
      allow get: if isTenantMember(tenantId);
      allow list: if false;
      allow create: if isTenantMember(tenantId);
      allow update: if isTenantMember(tenantId);
      allow delete: if isTenantMember(tenantId);
    }

    /**
     * @description Sub-collection for restaurant tables within a tenant.
     * @path /tenants/{tenantId}/tables/{tableId}
     * @allow (get) Tenant members can read table data.
     * @deny (create) Non-tenant members cannot create tables.
     * @principle Restricts access to tenant-owned data to tenant members.
     */
    match /tenants/{tenantId}/tables/{tableId} {
      allow get: if isTenantMember(tenantId);
      allow list: if false;
      allow create: if isTenantMember(tenantId);
      allow update: if isTenantMember(tenantId);
      allow delete: if isTenantMember(tenantId);
    }

    /**
     * @description Sub-collection for Kitchen Display System orders within a tenant.
     * @path /tenants/{tenantId}/kdsOrders/{kdsId}
     * @allow (get) Tenant members can read KDS order data.
     * @deny (create) Non-tenant members cannot create KDS orders.
     * @principle Restricts access to tenant-owned data to tenant members.
     */
    match /tenants/{tenantId}/kdsOrders/{kdsId} {
      allow get: if isTenantMember(tenantId);
      allow list: if false;
      allow create: if isTenantMember(tenantId);
      allow update: if isTenantMember(tenantId);
      allow delete: if isTenantMember(tenantId);
    }

    /**
     * @description Sub-collection for users within a tenant.
     * @path /tenants/{tenantId}/users/{userId}
     * @allow (get) Tenant members can read user data.
     * @deny (create) Non-tenant members cannot create users.
     * @principle Restricts access to tenant-owned data to tenant members.
     */
    match /tenants/{tenantId}/users/{userId} {
      allow get: if isTenantMember(tenantId);
      allow list: if false;
      allow create: if isTenantMember(tenantId);
      allow update: if isTenantMember(tenantId);
      allow delete: if isTenantMember(tenantId);
    }

    /**
     * @description Sub-collection for payments within a tenant.
     * @path /tenants/{tenantId}/payments/{paymentId}
     * @allow (get) Tenant members can read payment data.
